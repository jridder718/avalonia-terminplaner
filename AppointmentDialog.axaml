<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="avalonia_terminplaner.AppointmentDialog"
        Title="Neuer Termin" Width="400" Height="300"
		WindowStartupLocation="CenterScreen">
	<StackPanel Margin="10">
		<TextBlock Text="Titel" />
		<TextBox Name="TitleTextBox" Margin="0,0,0,10" />

		<TextBlock Text="Beschreibung" />
		<TextBox Name="DescriptionTextBox" Margin="0,0,0,10" />

		<TextBlock Text="Datum" />
		<DatePicker Name="DatePicker" Margin="0,0,0,10" />

		<TextBlock Text="Dauer (Stunden)" />
		<TextBox Name="DurationTextBox" Margin="0,0,0,20" />

		<Button Name="SaveButton" Content="Speichern" HorizontalAlignment="Right" Click="OnSaveButtonClick"/>
		<Button Name="CancelButton" Content="Abbrechen" HorizontalAlignment="Right" Click="OnCancelButtonClick"/>
	</StackPanel>
</Window>
